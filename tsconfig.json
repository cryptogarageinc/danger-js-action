{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2017"],
    "target": "es6",
    "sourceMap": true,
    "rootDir": ".",
    "jsx": "preserve",
    "baseUrl": "./",
    "outDir": ".",
    "incremental": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
